<section {{bind-attr class=":map mapCollapsed"}}>
  <ul class="clearfix">
    <li class='secondary'>
      <span class="topic-map-item-title">Posts</span>
      <span class="topic-map-item-value">{{number topic.replyCount}}</span>
    </li>
    <li class='secondary'>
      <span class="topic-map-item-title">Views</span>
      <span class="topic-map-item-value">{{number topic.views class=topic.viewsHeat}}</span>
    </li>
    <li class='secondary'>
      <span class="topic-map-item-title">Contributors</span>
      <span class="topic-map-item-value">{{number topic.participant_count}}</span>
    </li>
    {{#if topic.like_count}}
      <li class='secondary'>
        <i class="fa fa-heart fa-heart-small"></i>
        <span class="topic-map-item-value">{{number topic.like_count}}</span>
      </li>
    {{/if}}
    {{link-top-answer}}
  </ul>
</section>
